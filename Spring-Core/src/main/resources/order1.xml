<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  	   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  	   http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<context:component-scan
		base-package="in.co.rays.ioc" />

	<bean id="payment" class="in.co.rays.ioc.Payment">
		<property name="balance" value="100"></property>
	</bean>

	<bean id="inventory" class="in.co.rays.ioc.Inventory">
		<property name="stock" value="100"></property>
	</bean>


	<bean id="order1" class="in.co.rays.ioc.Order1">
		<property name="payment" ref="payment"></property>
		<property name="inventory" ref="inventory"></property>

	</bean>

</beans>